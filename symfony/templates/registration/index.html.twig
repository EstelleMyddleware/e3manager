{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

 <div class="row">
  <h1>Inscription</h1>
 </div>


  {{ form_start(form) }}
  <div class="row">
    <div class="col-6">
   {{ form_row(form.prenom,  { 'label': 'Prénom' , 'attr' : { 'placeholder' : 'Votre / vos prénom(s)'  }})}}
 </div>
<div class="col-6">
   {{ form_row(form.nom, { 'label': 'Nom' , 'attr' : { 'placeholder' : 'Votre nom'  }} ) }}
 </div>
<div class="col-6">
   {{ form_row(form.telephone,  { 'label': 'Téléphone' , 'attr' : { 'placeholder' : 'Votre numéro de téléphone'  }} )}}
 </div>
<div class="col-6">
   {{ form_row(form.email,{ 'label': 'Email' , 'attr' : { 'placeholder' : 'Votre adresse email professionnelle'  }} )}}
 </div>
<div class="col-6">
   {{ form_row(form.username, { 'label': 'Nom d\'utilisateur' , 'attr' : { 'placeholder' : 'Votre nom d\utilisateur'  }})}}
 </div>
<div class="col-6">
   {{ form_row(form.password, { 'label': 'Mot de passe' , 'attr' : { 'placeholder' : 'Votre mot de passe'  }})}}
 </div>
<div class="col-6">
   {{ form_row(form.confirm_password, { 'label': 'Confirmation mot de passe' , 'attr' : { 'placeholder' : 'Ressaisissez votre mot de passe'  }})}}
 </div>
<div class="col-6">
   {{ form_row(form.locale, { 'label': 'Langue', 'attr': { 'placeholder' : 'Choisissez votre langue'  }})}}
 </div>
<div class="col-6">
    <button type="submit" class="btn btn-success">S'inscrire</button>
  {{  form_end(form)  }}
  </div>
 </div>
</div>

{% endblock %}